<% layout("layouts/boilerplate") %>
<div class="row">
    <h1 class="text-center">
        Add Campground:
    </h1>
    <div class="col-6 offset-3">
    <form action="/campground/new" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
            <label class="form-label" for="title">Enter Title:</label>
            <input class="form-control" type="text" name="title" placeholder="Title" id="title" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
         <div>
            <label class="form-label" for="description">Enter Description:</label>
            <input class="form-control" type="text" name="description" placeholder="Description" id="description" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div>
            <label class="form-label" for="price">Enter Price:</label>
            <input class="form-control" type="number" name="price" placeholder="Price (In Dollar)" id="price" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div> 
        <div class="mb-3">
            <label class="form-label" for="location">Enter Location:</label>
            <input class="form-control" type="text" name="location" placeholder="Location" id="location" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3"> 
            <label class="form-label" for="image">Image URL:</label>
            <input class="form-control" type="text" name="image" placeholder="Image URL" id="image" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Submit</button>
        </div>
    </form>
    </div>
</div>

<a href="/campgrounds">All Campgrounds</a>
